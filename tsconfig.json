{
  "extends": "astro/tsconfigs/base",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": false, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": true, // default is true when "target" is "ES2022" or higher
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}