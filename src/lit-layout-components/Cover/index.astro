---
interface Props {

  space?: string; //"var(--s1)"
  minHeight?: string; //"100vh"
  noPad?: boolean; // false

}

const props = Astro.props;
---

<cover-l {...props}>
  <slot name="top" />
  <slot name="middle" />
  <slot name="bottom" />
</cover-l>

<script src="./Cover.ts"></script>

<style is:global>
  cover-l {
    display: flex;
    flex-direction: column;
    min-block-size: 80vh;
    padding: var(--s1);

    --my-flex-direction: column;
    --my-min-height: 100vh;
    --my-space: var(--s1);
    --my-pad: var(--s1);
  }
</style>
